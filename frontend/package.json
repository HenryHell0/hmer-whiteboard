{
	"name": "inkform",
	"version": "1.0",
	"private": true,
	"type": "module",
	"engines": {
		"node": "^20.19.0 || >=22.12.0"
	},
	"scripts": {
		"dev": "concurrently -k -n \"FRONTEND,BACKEND\" -c \"cyan,magenta\" \"npm:dev:frontend\" \"npm:dev:backend\"",
		"dev:frontend": "vite",
		"dev:backend": "bash -c 'cd $INIT_CWD/../backend && docker compose up'",
		"build": "vite build",
		"preview": "vite preview",
		"lint": "eslint . --fix",
		"format": "prettier --write src/",
		"deploy": "npm run build && gh-pages -d dist"
	},
	"dependencies": {
		"desmos": "^1.5.4",
		"pinia": "^3.0.4",
		"vue": "^3.5.22",
		"vue-mathjax-next": "^0.0.6"
	},
	"devDependencies": {
		"@eslint/js": "^9.33.0",
		"@types/desmos": "^1.11.0",
		"@types/node": "^24.10.1",
		"@typescript-eslint/eslint-plugin": "^8.47.0",
		"@typescript-eslint/parser": "^8.47.0",
		"@vitejs/plugin-vue": "^6.0.1",
		"@vue/eslint-config-prettier": "^10.2.0",
		"@vue/tsconfig": "^0.8.1",
		"concurrently": "^9.2.1",
		"eslint": "^9.39.1",
		"eslint-plugin-vue": "~10.4.0",
		"gh-pages": "^6.3.0",
		"globals": "^16.3.0",
		"prettier": "3.6.2",
		"typescript": "^5.9.3",
		"vite": "^7.1.7",
		"vite-plugin-vue-devtools": "^8.0.2",
		"vue-eslint-parser": "^10.2.0",
		"vue-tsc": "^3.1.4"
	}
}
